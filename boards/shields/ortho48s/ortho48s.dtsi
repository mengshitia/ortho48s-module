// Devicetree source file, use for both halves.
// Matrix Transform:
#include <dt-bindings/zmk/matrix_transform.h>
// Include physical layout:
#include "ortho48s-layout.dtsi"

// Shared kscan definations:
/ {
  kscan0: kscan0 {
    compatible = "zmk,kscan-gpio-matrix";
    diode-direction = "row2col";
    wakeup-source;
  };
};

// Matrix Transform defination:
/ {
  default_transform: keymap_transform0 {
    compatible = "zmk,matrix-transform";
    columns = <12>;
    rows = <4>;
    map = <
    //  LKey 1 |LeyK 2 |LKey 3 |LKey 4 |LKey 5 |LKey 6        RKey 1 |ReyK 2 |RKey 3 |RKey 4 |RKey 5  |RKey 6
        RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)       RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
    //  LKey 7 |LeyK 8 |LKey 9 |LKey 10 |LKey 11 |LKey 12     RKey 7 |ReyK 8 |RKey 9 |RKey 10 |RKey 11  |RKey 12
        RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)       RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
    //  LKey 13 |LeyK 14 |LKey 15 |LKey 16 |LKey 17 |LKey 18  RKey 13 |ReyK 14 |RKey 15 |RKey 16 |RKey 17  |RKey 18
        RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)       RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
    //  LKey 19 |LeyK 20 |LKey 21 |LKey 22 |LKey 23 |LKey 24  RKey 19 |ReyK 20 |RKey 21 |RKey 22 |RKey 23  |RKey 24
        RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)       RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)
    >;
  };
};


// Chosen Node.
// Set the 'chosen' node to a defined "default" physical layout.
/ {
  chosen {
    zmk,physical-layout = &physical_layout0;
  };
};
